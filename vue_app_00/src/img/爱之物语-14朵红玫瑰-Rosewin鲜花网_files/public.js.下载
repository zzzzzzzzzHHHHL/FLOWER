//首页头部下载APP，会员下拉框，购物袋
		
$(function(){
        $("#header .headerApp").hover(function(){
			$(this).children(".headerApp_m").fadeIn(150);
		},function(){
			$(this).children(".headerApp_m").fadeOut(150);
		});
		$("#header .headerUser").hover(function(){
			$(this).children(".headerUser_info").fadeIn(150);
		},function(){
			$(this).children(".headerUser_info").fadeOut(150);
		});
		$("#header .headerCart").hover(function(){
			$(this).children(".headerCart_m").fadeIn(150);
		},function(){
			$(this).children(".headerCart_m").fadeOut(150);
		});           
    
    })

//在线咨询
function backTop(){
	$("body,html").animate({scrollTop:0},200)
	return false;
}	

//搜索
function search() {
    
    var k = $.trim($('#sch_kwd').val());
    if(!k) { alert('请输入要搜索的关键词！');  return false;}
    
    window.location.href=$page_http_host_url+"/search-k"+k+".html";
}
//显示弹出框
function boxShow(boxID){
	var maskHeight = $(document).height();
    var maskWidth = $(window).width();
    var relLeft = ($(window).width() - $("#" + boxID).width())/2;
    var relTop = ($(window).height() - $("#" + boxID).height())/2;
    $(".mask").css({height:maskHeight, width:maskWidth}).show();
	$(".mask_a").css({height:maskHeight, width:maskWidth}).show();
    $("#" + boxID).css({top:relTop + "px", left:relLeft + "px"}).show();
	$(".close_btn").click(function(){
		$(".mask, .ac_box").hide();
	});
};


$(function(){
	var timoutid;
	//头部导航二级菜单
	 $(".tl_nav_list_wp .navson").mouseenter(function(){
    
    var navnum = $(this).attr('nav');
    $(".tl_nav_list_wp .navson").removeClass('active');
    $(this).addClass('active');
    $('.tl_nav_sample_sub').removeClass("tl_nav_sample_sub_show");
    $('.tl_nav_sample_sub .tl_nav_sample').removeClass("tl_nav_sample_show");
    $("#"+navnum).addClass("tl_nav_sample_sub_show");
    $("#"+navnum+" .tl_nav_sample").addClass("tl_nav_sample_show");
     })
    
     $(".tl_nav_sample_sub").mouseleave(function(){
    	 $(".tl_nav_list_wp .navson").removeClass('active');
         $(this).removeClass("tl_nav_sample_sub_show");
         $(this).find('.tl_nav_sample').removeClass("tl_nav_sample_show");
         
    });
    $('.iphone').click(function () {
            boxShow('bc01');
        });
    $('.android').click(function () {
            boxShow('bc02');
    });


	//在线咨询APP下载提示
	$(".consultApp").hover(function(){
		$(this).children(".consult_app_m").fadeIn(100);
	},function(){
		$(this).children(".consult_app_m").fadeOut(100);
	});
    
    //右侧咨询
    $(".right-toolbar dd").hover(function() {
            $(this).find("a img").hide();
            $(this).find("p").show();
            $(this).addClass("under_line")
        },
        function() {
            $(this).find("a img").show();
            $(this).find("p").hide();
            $(this).removeClass("under_line")
        });
        $("#backto-top").on("click",
        function() {
            $("html,body").animate({
                scrollTop: 0
            },
            "fast");
            return false
        });
       
        

});
